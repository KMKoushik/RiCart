<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/popup"
    android:gravity="center"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Order"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TableLayout
        android:id="@+id/tabla_cuerpo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:weightSum="1">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/th1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Item"
                android:textSize="13dp"

                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

            <TextView
                android:id="@+id/th2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Price"
                android:textSize="13dp"

                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

            <TextView
                android:id="@+id/th3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"

                android:textColor="#000000"

                android:padding="5dp"
                android:text="Quantity"
                android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
                 <TextView
                android:id="@+id/th5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="13dp"

                android:padding="5dp"
                android:text="Total"
                android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

        </TableRow>


        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tr01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="13dp"
                android:padding="5dp"
                android:text="carrot"
                android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

            <TextView
                android:id="@+id/tr02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="5"
                android:textSize="13dp"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

            <EditText
                android:id="@+id/tr03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="13dp"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"></EditText>
            <TextView
                android:id="@+id/tr04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="13dp"
                android:padding="5dp"
                android:text="25"
                android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
                  </TableRow>
        <TableRow
            android:id="@+id/tableRow0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tr11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="13dp"
                android:padding="5dp"
                android:text="beans"

                android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

            <TextView
                android:id="@+id/tr12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="8"
                android:textSize="13dp"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

            <EditText
                android:id="@+id/tr13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="13dp"
                android:padding="5dp"

                android:textAppearance="?android:attr/textAppearanceMedium"></EditText>
            <TextView
                android:id="@+id/tr14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="13dp"
                android:padding="5dp"
                android:text="40"
                android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
                  </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tr21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="13dp"
                android:padding="5dp"
                android:text="Raw rice"
                android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

            <TextView
                android:id="@+id/tr22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="30"
                android:textSize="13dp"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

            <EditText
                android:id="@+id/tr23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="13dp"

                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"></EditText>
            <TextView
                android:id="@+id/tr24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="13dp"
                android:padding="5dp"
                android:text="30"
                android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
                   </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tr31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="13dp"
                android:padding="5dp"
                android:text="Full boiled rice"
                android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

            <TextView
                android:id="@+id/tr32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="40"
                android:textSize="13dp"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

            <EditText
                android:id="@+id/tr33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="13dp"
                android:padding="5dp"

                android:textAppearance="?android:attr/textAppearanceMedium"></EditText>
            <TextView
                android:id="@+id/tr34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="13dp"
                android:padding="5dp"
                android:text="80"
                android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
                   </TableRow>
        <TextView
            android:id="@+id/chumma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="13dp"
            android:padding="5dp"
            android:text="The total Amount to be paid is : 175 SGD"
            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

        />


        <RelativeLayout android:layout_weight="0.22">

            <Button
                android:id="@+id/close"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:background="@drawable/buttonshapesmall"
                android:layout_alignBaseline="@+id/submit"
                android:layout_alignBottom="@+id/submit"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="38dp"
                android:layout_marginStart="38dp" />

            <Button
                android:id="@+id/submit"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:background="@drawable/buttonshapegreen"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="33dp"
                android:layout_marginEnd="33dp" />
        </RelativeLayout>


    </TableLayout>




</LinearLayout>